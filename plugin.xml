<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="cordova-plugin-advanced-nativeaudio"
        version="1.0.2">

    <name>Cordova Native Audio</name>
    <author>HansKrywaa</author>
    <description>Cordova/PhoneGap Plugin for low latency Native Audio Playback, must have for HTML5 games</description>

    <license>MIT</license>
    <keywords>audio,fx,music,mp3,game,hanskrywaa</keywords>
    <repo>https://github.com/HansKrywaa/cordova-plugin-advanced-nativeaudio</repo>
    <issue>https://github.com/HansKrywaa/cordova-plugin-advanced-nativeaudio/issues</issue>

    <engines>
        <engine name="cordova" version=">=3.5"/>
    </engines>

    <!-- android -->
    <platform name="android">
        <js-module src="www/nativeaudio.js" name="nativeaudio">
            <clobbers target="window.NativeAudio"/>
        </js-module>

        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="NativeAudio">
                <param name="android-package" value="de.hanskrywaa.NativeAudio"/>
            </feature>
        </config-file>

        <source-file src="src/android/NativeAudio.java" target-dir="de/hanskrywaa"/>
        <source-file src="src/android/NativeAudioAsset.java" target-dir="de/hanskrywaa"/>
        <source-file src="src/android/NativeAudioAssetComplex.java" target-dir="de/hanskrywaa"/>

        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
        </config-file>

    </platform>

    <!-- ios -->
    <platform name="ios">
        <js-module src="www/nativeaudio.js" name="nativeaudio">
            <clobbers target="window.NativeAudio"/>
        </js-module>
        <config-file target="config.xml" parent="/*">
            <feature name="NativeAudio">
                <param name="ios-package" value="NativeAudio"/>
            </feature>
        </config-file>

        <framework src="Foundation.framework"/>
        <framework src="AVFoundation.framework"/>
        <framework src="AudioToolbox.framework"/>

        <header-file src="src/ios/NativeAudio.h"/>
        <source-file src="src/ios/NativeAudio.m"/>

        <header-file src="src/ios/NativeAudioAsset.h"/>
        <source-file src="src/ios/NativeAudioAsset.m"/>

    </platform>

    <!-- browser -->
    <platform name="browser">
        <js-module name="NativeAudioBrowser" src="www/nativeaudio-browser.js">
            <clobbers target="cordova.plugins.NativeAudio"/>
            <clobbers target="plugins.NativeAudio"/>
        </js-module>
    </platform>

</plugin>
